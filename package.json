{
  "name": "@jiode/syzygy",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev:docs": "nx run docs:dev",
    "build:docs": "nx run docs:build",
    "preview:docs": "nx run docs:preview",
    "build:blog": "pnpm -w nx build client-blog --configuration=production",
    "dev:blog": "pnpm -w nx run client-blog:dev",
    "deploy:blog": "pnpm -w nx run client-blog:deploy",
    "cf:build:blog": "pnpm -w approve-builds && pnpm -w nx build client-blog --configuration=production",
    "dev:sesame": "pnpm -w nx run sesame.jiode.one:dev:live",
    "build:sesame": "node apps/core/portfolio/sesame.jiode.one/scripts/build-worker.mjs",
    "release:sesame": "pnpm -w nx run sesame.jiode.one:release",
    "r2:list": "wrangler r2 object list --bucket resume-data --prefix resumes/ --config apps/core/portfolio/resume.jiode.one/resume-meta-worker/wrangler.toml",
    "clean:dandelion": "rimraf dist/apps/sesame.jiode.one",
    "prepare": "husky",
    "lint:ghwf": "actionlint -color",
    "lint:ghwf:loose": "actionlint -shellcheck=never -color",
    "test": "vitest",
    "test:ci": "vitest run --reporter=default",
    "verify:sesame": "pnpm -w -F @jiode/sesame test:ci && pnpm -w -F @jiode/sesame build",
    "verify:jiode.one": "pnpm -w -F @jiode/jiode.one build && vitest run --passWithNoTests",
    "verify:genie-session": "pnpm -w -F @jiode/genie-session build && pnpm -w -F @jiode/genie-session test:ci",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,cjs}": "pnpm -s eslint --fix",
    "*.{css,md,json,yml,yaml}": "pnpm -s prettier --write"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~20.0.7",
    "@angular/common": "~20.0.7",
    "@angular/compiler": "~20.0.7",
    "@angular/core": "~20.0.7",
    "@angular/forms": "~20.0.7",
    "@angular/platform-browser": "~20.0.7",
    "@angular/platform-browser-dynamic": "~20.0.7",
    "@angular/router": "~20.0.7",
    "express": "^4.21.2",
    "front-matter": "^4.0.2",
    "marked": "^15.0.12",
    "rxjs": "~7.8.2",
    "three": "^0.179.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
