    "@angular/compiler-cli": "~20.0.7",
    "@angular/language-service": "~20.2.1",
    "@angular/platform-server": "~20.2.1",
    "@angular/ssr": "~20.2.0",
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/starlight": "^0.35.2",
    "@changesets/cli": "^2.29.6",
    "@nx/angular": "^21.4.1",
    "@nx/cypress": "21.4.1",
    "@nx/eslint": "21.4.1",
    "@nx/eslint-plugin": "21.4.1",
    "@nx/jest": "21.4.1",
    "@nx/js": "21.4.1",
    "@nx/web": "21.4.1",
    "@nx/workspace": "^21.4.1",
    "@schematics/angular": "~20.2.0",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.17",
    "@types/express": "^4.17.23",
    "@types/jasmine": "~5.1.9",
    "@types/jest": "^29.5.14",
    "@types/node": "18.16.9",
    "@typescript-eslint/utils": "^8.41.0",
    "angular-eslint": "^20.2.0",
    "astro": "^5.13.3",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.0",
    "chokidar-cli": "^3.0.0",
    "cypress": "^14.5.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^3.6.0",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
