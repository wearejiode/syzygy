{
  "name": "genie-assistant",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/genie-assistant.umd.js",
  "module": "dist/genie-assistant.js",
  "exports": {
    ".": {
      "import": "./dist/genie-assistant.js",
      "require": "./dist/genie-assistant.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "start-server": "node server/demo-server.js",
    "start": "concurrently \"vite\" \"node server/demo-server.js\"",
    "build": "vite build",
    "postbuild": "shx cp demo/index.html dist/index.html",
    "preview": "vite preview",
    "embed": "node utils/embedder.js",
    "prepare": "husky",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "concurrently": "^8.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.30.1"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "vite": "^5.2.8",
    "vitest": "^3.2.1"
  },
  "lint-staged": {
  "**/*.{js,jsx,ts,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "**/*.{json,css,md,html}": [
    "prettier --write"
  ]
}
}
